.order-page{
  background: #F2F2F2;
  /* height:100%; */
}
.order-list{
  padding-top:20rpx;
}
.order-list-item{
  margin-bottom:20rpx;
  background: #fff;
}
.order-list-item .order-state-name{
  color:#666;
  font-size:24rpx;
  display: flex;
  justify-content: space-between;
  padding:27rpx 27rpx 20rpx;
}
.order-list-item .order-state-name .order-state{
  color:#FF0000;
  font-size:22rpx;
}
.order-list-item .order-msg-block{
  padding:17rpx 26rpx 16rpx 45rpx;
  border-top:1px solid #DDDDDD;
  border-bottom:1px solid #DDDDDD;
}
.order-list-item .order-msg{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.order-list-item .order-msg .order-msg-text{
  flex:1;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.order-list-item .order-msg .order-img{
  margin-right:22rpx;
  border:1px solid #EAEAEA;
  border-radius: 10rpx;
  overflow: hidden;
}
.order-list-item .order-msg .order-msg-text .order-msg-text-title{
 color:#333333;
 font-size: 24rpx;
 word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.order-list-item .order-msg .order-msg-text .order-msg-text-type{
  color:#868686;
  font-size: 22rpx;
 }
 .order-list-item .order-msg .order-msg-text .order-msg-text-price{
  color:#333;
  font-size: 30rpx;
  display: flex;
  align-items:flex-end;
 }
 .order-list-item .order-msg .order-msg-text .order-msg-text-price>text{
  color:#868686;
  font-size: 22rpx;
  position: relative;
  top:-3rpx;
 }
 .order-list-item .order-msg-block .order-msg-money{
   width:100%;
   display: flex;
   justify-content: flex-end;
   font-size: 30rpx;
 }
 .order-list-item .order-msg-block .order-msg-money .order-msg-money-text{
  color:#333;
}
.order-list-item .order-msg-block .order-msg-money .order-msg-money-price{
  color:#FF2C55;
}
.order-all-btn{
  display: flex;
  justify-content: flex-end;
  padding:18rpx 26rpx;
}
.order-all-btn .order-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  height:55rpx;
  width:144rpx;
  font-size:24rpx;
  border:1px solid #FF0000;
  border-radius: 5rpx;
  margin-left:15rpx;
}
.order-all-btn .order-btn-red{
  color:#fff;
  background: #FF0A32;
}
.order-all-btn .order-btn-white{
  color:#FF0A32;
  background: #fff;
}
/* 确认收货弹窗 */
.wx-popup {
  position: absolute;
  z-index: 100;
  left: 0;
  top: 0;
  right:0;
  bottom:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
 /* height:800rpx; */
  /* width: 80%; */
  /* max-width: 600rpx; */
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  padding:56rpx 37rpx 44rpx;
}
.wx-popup .goods-list{
  display: flex;
  justify-content: space-between;
  margin-top:41rpx;
}
.wx-popup .goods-list>view{
  width:256rpx;
  height:88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 3rpx;
}
.wx-popup .goods-list .goods-cancel-btn{
  border:1px solid #FF2C55;
  color:#FF2C55;
}
.wx-popup .goods-list .goods-sure-btn{
  background: #FF2C55;
  color:#fff;
  border:1px solid  #FF2C55;
  margin-left:25rpx;
}
.wx-popup .goods-title1{
  color:#333333;
  font-size: 30rpx;
  text-align: center;
  margin:22rpx 0 49rpx;
}
.wx-popup .goods-title2{
  color:#999999;
  font-size: 28rpx;
  text-align: center;
}