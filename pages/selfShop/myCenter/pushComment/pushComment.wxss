
@import "../../../../utils/weui.wxss";
page{
  background: #F2F2F2;
}
.pushComment{
  /* height:100%; */
  background: #F2F2F2;
}
.pushComment-block-top{
  border-top:1px solid #DDDDDD;
  background: #fff;
  margin-bottom:20rpx;
}
.textarea-block{
  padding:29rpx 54rpx 20rpx 27rpx;
  color:#000;
  font-size: 28rpx;
  border-top:1px solid #DDDDDD;
}
.file-block{
  padding-left:26rpx;
}
.push-btn{
  width:100%;
  height:88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;
  background: #FF2C55;
  color:#FFFEFE;
  font-size: 34rpx;
  position: fixed;
  bottom:0;
  left:0;
}
/* 五星 */
.star-pos{
  position: relative;
  top:10rpx;
}
.comment1-description{
  padding:20rpx 0 0rpx 26rpx;
}
.comment1-description1{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  margin-right:35rpx;
}
.starsM{
  z-index: 1;
  width: 33rpx;
  height: 32rpx;
  position: relative;
  margin-right:14rpx;
}
.starsM image{
  position: absolute;
  left:0;
  top:0;
  z-index: 1;
}
.comment1-description .star-pos .starsM .bright-star{
  z-index: 2;
}
.comment1-description .star-pos .hideStar .dark-star{
  z-index: 3;
}