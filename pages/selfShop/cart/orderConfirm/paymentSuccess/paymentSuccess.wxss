/* pages/selfShop/cart/orderConfirm/paymentSuccess/paymentSuccess.wxss */

.share {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.payment-success .time-remaining {
  width: 100%;
  background-color: #fff;
  text-align: center;
  padding: 0 50rpx;
  margin-top: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
} 

/* 支付成功 */

.payment-success .time-remaining .pay-success {
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.time-remaining .pay-success icon {
  margin-right: 20rpx;
}


/* 按钮 */

.payment-success .time-remaining button {
  width: 88%;
  height: 100rpx;
  background: linear-gradient(to left, #ff2f54, #ff0e19, #ff4f8e);
  color: #FFF;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
}

.payment-success .time-remaining .go-home {
  background: #fff;
  border: 1px solid #ff0e19;
  color: #ff0e19;
  margin-bottom: 60rpx;
}