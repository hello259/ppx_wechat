/* 遮罩层 */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .2);
    z-index: 2;
}

.rule-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .2);
    z-index: 2;
}


/* 拼团规则 */

.share .pt-rule {
    width: 86%;
    height: 34%;
    position: absolute;
    top: 30%;
    left: 7%;
    background-color: #fff;
    z-index: 3;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 15rpx;
}


/* 关闭 */

.share .pt-rule .rule-close {
    position: absolute;
    top: 0rpx;
    right: 25rpx;
    font-size: 50rpx;
    color: #B2B2B2;
}


/* 标题 */

.share .pt-rule .rule-title {
    width: 100%;
    margin: 30rpx 0 40rpx;
    font-size: 38rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
}

.pt-rule .rule-title .title-left::after {
    content: "";
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    background-color: #000;
    transform: rotate(45deg);
    margin: 0 25rpx 6rpx 0;
}

.pt-rule .rule-title .title-right::before {
    content: "";
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    background-color: #000;
    transform: rotate(45deg);
    margin: 0 0 6rpx 25rpx;
}


/* 规则 */

.pt-rule .rule-content {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 34rpx;
}

.pt-rule .rule-content text {
    margin-bottom: 30rpx;
    color: #333333;
}


/* 分享成功 */

.share .share-success {
    position: fixed;
    top: 30%;
    left: 5%;
    width: 90%;
    height: 40%;
    background-color: #fff;
    z-index: 3;
    text-align: center;
    /* border: 1px solid #000; */
    border-radius: 20rpx;
}

.share-success .share-success-title {
    color: red;
    font-weight: bold;
}


