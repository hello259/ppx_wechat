/* 提示 */

.share .hint {
    width: 100%;
    margin-top: 20rpx;
    padding: 25rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
}


/* 头像 */

.share .hint .user-head {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 25rpx 0;
    box-sizing: border-box;
}

.hint .user-head image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 40rpx 20rpx;
}


/* 拼主 */

.share .hint .itself {
    display: block;
    width: 60rpx;
    height: 30rpx;
    background: linear-gradient(to left, #FF3179, #FF0000);
    color: #fff;
    text-align: center;
    line-height: 30rpx;
    font-size: 20rpx;
    border-radius: 30rpx;
    position: absolute;
    top: 78rpx;
    left: 318rpx;
}


/* 订单详情-拼团规则 */

.hint .details-rule .common {
    height: 110rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #EAEBEA;
}

.hint .details-rule .common::after {
    content: "";
    display: block;
    position: absolute;
    height: 15rpx;
    width: 15rpx;
    top: 50%;
    right: 0rpx;
    margin-top: -8rpx;
    border-top: 1px solid #b6b6b6;
    border-right: 1px solid #b6b6b6;
    transform: rotate(45deg);
}

.details-rule .common .first {
    font-size: 32rpx;
    color: #333333;
}

.details-rule .common .last {
    font-size: 30rpx;
    color: #999999;
    margin-right: 40rpx;
}


