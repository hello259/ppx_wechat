/* ====================================================================== */

page {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.share {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    position: relative;
}


/* 剩余时间 */

.share .time-remaining {
    width: 100%;
    /* height: 52%; */
    background-color: #fff;
    text-align: center;
    padding: 0 50rpx;
    box-sizing: border-box;
    overflow: hidden;
}


/* 支付成功 */

.share .time-remaining .pay-success {
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
}

.time-remaining .pay-success icon {
    margin-right: 20rpx;
}


/* 倒计时 */

.time-remaining .time {
    margin: 40rpx 0 60rpx;
}

.time-remaining .time text {
    font-size: 40rpx;
    display: inline-block;
    color: #333333;
}

.time-remaining .time .residue {
    margin-right: 20rpx;
}

.time-remaining .time .hours,
.time-remaining .time .minute,
.time-remaining .time .second {
    width: 60rpx;
    height: 60rpx;
    background-color: #333;
    color: #fff;
    border-radius: 10rpx;
    line-height: 60rpx;
}


/* 通知 */

.share .time-remaining .inform {
    font-size: 40rpx;
    font-weight: bold;
    /* padding: 0 50rpx; */
    /* box-sizing: border-box; */
}

.time-remaining .inform text {
    color: red;
}


/* 按钮 */

.share .time-remaining button {
    width: 88%;
    height: 100rpx;
    background: linear-gradient(to left, #ff2f54, #ff0e19, #ff4f8e);
    color: #FFF;
    font-size: 34rpx;
    font-weight: bold;
    border-radius: 100rpx;
    line-height: 100rpx;
    margin-top: 30rpx;
}

.share .time-remaining .go-home {
    background: #fff;
    border: 1px solid #ff0e19;
    color: #ff0e19;
    margin-bottom: 60rpx;
}


/* 空白 */

.share #blank {
    width: 100%;
    height: 20rpx;
    background-color: #F7F7F7;
}


