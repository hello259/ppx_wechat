/* pages/selfShop/sharePage/shareGroup/shareGroup.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.share-group {}


/* 商品信息 */

.share-group .goods-detail {
    background-color: #fff;
    display: flex;
    align-items: center;
    /* justify-content: space-around; */
    padding: 30rpx 20rpx;
    box-sizing: border-box;
}


/* 商品图片 */

.share-group .goods-detail .goods-img {
    width: 180rpx;
    height: 180rpx;
    border: 1px solid #F7f7f7;
    line-height: 180rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.share-group .goods-detail .goods-img image {
    width: 80%;
    height: 80%;
}


/* 商品说明 */

.share-group .goods-detail .goods-explain {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 32rpx;
    color: #333;
}

.goods-detail .goods-explain .goods-price {
    margin-top: 30rpx;
}

.goods-explain .goods-price text {
    color: #999999;
    font-size: 26rpx;
}

.goods-price .price text:first-child {
    font-size: 34rpx;
    font-weight: bold;
    color: #FF0000;
    margin-right: 30rpx;
}

/* .goods-price .price text:last-child {
    color: #999999;
    font-size: 26rpx;
} */


/* 提示时间 */

.share-group .group-hint {
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f2f2f2;
    line-height: 100rpx;
}

.share-group .count-down {
    margin-left: 20rpx;
}

.share-group .count-down text {
    display: inline-block;
    margin-right: 10rpx;
    width: 55rpx;
    height: 55rpx;
    background-color: #3a3d45;
    text-align: center;
    line-height: 55rpx;
    border-radius: 10rpx;
    color: #fff;
}


/* 拼团方法 */

.share-group .group-way {
    width: 100%;
    margin-top: 20rpx;
    padding: 25rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
}


/* 头像 */

.share-group .group-way .user-head {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 25rpx 0;
    box-sizing: border-box;
}

.group-way .user-head image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 40rpx 20rpx;
}


/* 拼主 */

.share-group .group-way .itself {
    display: block;
    width: 60rpx;
    height: 30rpx;
    background: linear-gradient(to left, #FF3179, #FF0000);
    color: #fff;
    text-align: center;
    line-height: 30rpx;
    font-size: 20rpx;
    border-radius: 30rpx;
    position: absolute;
    top: 78rpx;
    left: 318rpx;
}


/* 一键成团 */

.share-group .submit-group {
    width: 100%;
    height: 100rpx;
    background: linear-gradient(to left, #ff4f8e, #ff0e19, #ff2f54);
    color: #FFF;
    font-size: 34rpx;
    font-weight: bold;
    border-radius: 100rpx;
    line-height: 100rpx;
    margin: 30rpx 0;
}


/* 订单详情-拼团规则 */

.group-way .details-rule .common {
    height: 110rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #EAEBEA;
}

.group-way .details-rule .common::after {
    content: "";
    display: block;
    position: absolute;
    height: 15rpx;
    width: 15rpx;
    top: 50%;
    right: 0rpx;
    margin-top: -8rpx;
    border-top: 1px solid #b6b6b6;
    border-right: 1px solid #b6b6b6;
    transform: rotate(45deg);
}

.details-rule .common .first {
    font-size: 32rpx;
    color: #333333;
}

.details-rule .common .last {
    font-size: 30rpx;
    color: #999999;
    margin-right: 40rpx;
}


/* 拼团规则 */

.share-group .pt-rule {
    width: 86%;
    height: 34%;
    position: absolute;
    top: 30%;
    left: 7%;
    background-color: #fff;
    z-index: 3;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 15rpx;
}


/* 关闭 */

.share-group .pt-rule .rule-close {
    position: absolute;
    top: 0rpx;
    right: 25rpx;
    font-size: 50rpx;
    color: #B2B2B2;
}


/* 标题 */

.share-group .pt-rule .rule-title {
    width: 100%;
    margin: 30rpx 0 40rpx;
    font-size: 38rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
}

.pt-rule .rule-title .title-left::after {
    content: "";
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    background-color: #000;
    transform: rotate(45deg);
    margin: 0 25rpx 6rpx 0;
}

.pt-rule .rule-title .title-right::before {
    content: "";
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    background-color: #000;
    transform: rotate(45deg);
    margin: 0 0 6rpx 25rpx;
}


/* 规则 */

.pt-rule .rule-content {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 34rpx;
}

.pt-rule .rule-content text {
    margin-bottom: 30rpx;
    color: #333333;
}


/* 遮罩层 */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .2);
    z-index: 2;
}